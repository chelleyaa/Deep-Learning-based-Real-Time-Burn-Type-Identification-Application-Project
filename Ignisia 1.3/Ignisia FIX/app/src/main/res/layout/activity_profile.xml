<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA"
    tools:ignore="ExtraText"
    tools:context=".profile">

    <!-- Header -->
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="App Logo" />

    <!-- Profil Gambar -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/profile"
        android:contentDescription="Profile Image"
        android:layout_marginTop="16dp" />

    <!-- Nama -->
    <TextView
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama: "
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#000" />

    <!-- Universitas -->
    <TextView
        android:id="@+id/text_univ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Universitas:"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#000" />

    <!-- Email -->
    <TextView
        android:id="@+id/text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#000" />

    <!-- Nomor Dokter -->
    <TextView
        android:id="@+id/text_nomor_dokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nomor Dokter:"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#000" />

    <!-- Nama Dokter -->
    <TextView
        android:id="@+id/text_nama_dokter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Dokter:"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#000" />7

    <!-- Tombol Logout -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF" />

    <!-- Tombol Kembali -->
    <TextView
        android:id="@+id/btn_kembali3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#3F51B5"
        android:textSize="16sp" />
</LinearLayout>
