<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".guide">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="197dp"
        android:layout_height="281dp"
        app:srcCompat="@drawable/guide" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="1.Pastikan area terang tanpa bayangan yang mengganggu." />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="2.Tempatkan luka di tengah bingkai kamera sepereti pada contoh" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="3.Ambil gambar dari jarak yang cukup untuk menangkap seluruh luka tanpa memotong area penting." />

    <Button
        android:id="@+id/Mulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mulai" />
</LinearLayout>